<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.miusi.entity.User" table="user">
		<id name="id" column="id" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="device_id" column="device_id" type="int"></property> 
		<property name="is_vip" column="is_vip" type="int"></property>  
	</class>
</hibernate-mapping>

